@model HoroscopeViewModel
@{
    ViewData["Title"] = "ViewAll";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>All Horoscope Readings</h2>
    <div class="row">
        <div class="col-md-3 profile">
            <div class="profile-userpic"></div>
        </div>
        <table class="bootstrap-table table  table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reading in Model.HoroscropeReadings)
                {
                <tr>
                    <td>@reading.Title</td>
                    <td>@reading.Desciption</td>
                    <td>@reading.Created </td>
                    <td>
                        <a asp-controller="Horoscope" asp-action="Edit" asp-route-id="@reading.Id" class="btn btn-sm btn-default">Edit</a>
                        <a asp-controller="Horoscope" asp-action="Details" asp-route-id="@reading.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-controller="Horoscope" asp-action="Delete" asp-route-id="@reading.Id" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>