@model SaturnReportViewModel
@{
    ViewData["Title"] = "ViewAll";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <h1>Saturn Report</h1>
    <div class="row">
        <div class="col-md-3 profile">
            <div class="profile-userpic"></div>
        </div>
        <table class="table table-striped">
            <thead class="fixed-table-header">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th>Body</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var saturn in Model.SaturnReports)
                {
                    <tr>
                        <td>@saturn.Title</td>
                        <td>@saturn.Desciption</td>
                        <td>@saturn.Created </td>
                        <td>@saturn.BodyText</td>
                        <td>
                            <a asp-controller="SaturnReport" asp-action="Edit" asp-route-id="@saturn.Id" class="btn btn-sm btn-default">Edit</a>
                            <a asp-controller="SaturnReport" asp-action="Details" asp-route-id="@saturn.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-controller="SaturnReport" asp-action="Delete" asp-route-id="@saturn.Id" class="btn btn-sm btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>