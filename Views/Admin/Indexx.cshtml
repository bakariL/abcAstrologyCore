@model AdminViewModel

@inject SignInManager<ckl.Data.ApplicationUser> SignInManager
@inject UserManager<ckl.Data.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-offset-8">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Charts</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <input class="blue" id="number" value="" placeholder="0" />
                <h4 class="card-header ">Saturn Report Request</h4>
                <div class="card-body">
                    <h5 class="card-title">view, edit, and create your Saturn Reports.</h5>
                    <a asp-controller="SaturnReport" asp-action="ViewAll" class="btn btn-default" id="saturnBtn">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <h4 class="card-header"> Calendar </h4>
                <div class="card-body">
                    <h5 class="card-title">view, edit, and create your schedule.</h5>
                    <a href="#" class="btn btn-default">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <h4 class="card-header"> Users </h4>
                <div class="card-body">
                    <h5 class="card-title">view, edit, and create your customer list.</h5>
                    <a asp-controller="Customer" asp-action="ViewAll" class="btn btn-default">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <h4 class="card-header"> Help </h4>
                <div class="card-body">
                    <h5 class="card-title">Helpful links, tips, and FAQs.</h5>
                    <a href="#" class="btn btn-default">View</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card" id="leftPanel">
                <h4 class="card-header"> Recent Activity </h4>
                <h6> Total Users </h6>
                <div class="card-body">
                   
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" id="rightPanel">
                @await Component.InvokeAsync("CustomerData")
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="card" id="midLeft">

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <hr />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="saturnRequestList"></ul>
        </div>
    </div>
</div>

