@using Microsoft.AspNetCore.Identity
@inject UserManager<ckl.Data.ApplicationUser> UserManager

@model IEnumerable<Newsletter>
@{
    ViewData["Title"] = "Homepage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Update</h2>
            <form asp-controller="Newsletter" asp-action="Edit" method="post">
                @foreach (var newsletter in Model)
                {
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="form-group">
                            <label asp-for="@newsletter.Title"></label>
                            <input asp-for="@newsletter.Title" class="form-control" />
                            <span asp-validation-for="@newsletter.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@newsletter.Desciption"></label>
                            <input  asp-for="@newsletter.Desciption" class="form-control" />
                            <span asp-validation-for="@newsletter.Desciption" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@newsletter.BodyText"></label>
                            <input  asp-for="@newsletter.BodyText" class="form-control" />
                            <span asp-validation-for="@newsletter.BodyText" class="text-danger"></span>
                        </div>

                    </div>
                    <button asp-controller="Newsletter" asp-action="Edit" asp-route-id="@newsletter.Id" type="submit" class="btn btn-default">Update</button>
                }
            </form>
        </div>
    </div>
</div>
