
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


<div class="container">
    <h2>Create a Report</h2>
    <div class="row">
        <div class="col-lg-3">
            <div class="card-view">
                <img src="~/images/graybox.png" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Saturn Report</h5>
                    <p class="card-text">Create a new Saturn report here.</p>
                    <a asp-controller="SaturnReport" asp-action="Create" class="btn btn-primary"> Saturn Report </a>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card-view">
                <img src="~/images/graybox.png" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Horoscope Reading</h5>
                    <p class="card-text">Create a new Horoscope here.</p>
                    <a asp-controller="Horoscope" asp-action="Create" class="btn btn-primary"> Horoscope Reading </a>

                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card-view">
                <img src="~/images/graybox.png" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Newsletter</h5>
                    <p class="card-text">Create a new Newsletter here.</p>
                    <a asp-controller="Newsletter" asp-action="Create" class="btn btn-primary"> Newsletter </a>

                </div>
            </div>
        </div>

    </div>
</div>
